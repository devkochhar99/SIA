<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/write1"
    tools:context="sia.dev.com.sia.Write">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Text will be written here"
        android:scrollbars="vertical"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:layout_marginTop="79dp"
        android:layout_alignTop="@+id/button1"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write"
        android:textStyle="bold"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />
    <TextView android:id="@+id/textView17"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Let's Write Help - "
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/textView18"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView android:id="@+id/textView18"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="This can be used by a person if he/she wants SIA to write for him/her.SIA will write all the stuff that one speaks after clicking on the write button.One can copy the text and can use the text wherever needed."
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:text="May I write something for you :"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy text"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

</RelativeLayout>
